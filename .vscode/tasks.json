{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "${workspaceFolder}/*/*.c",
                "${workspaceFolder}/parsing/*/*/*.c",
                "${workspaceFolder}/parsing/*/*.c",
                "${workspaceFolder}/execution/*/*/*.c",
                "${workspaceFolder}/execution/*/*.c",
                "-lreadline",
                //"-Ofast",
                //"-Wall",
                //"-Wextra",
                //"-Werror",
                //"-fsanitize=address",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}